<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F9F9F9">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <!-- App/Company Introduction -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We're here to help you travel smarter!"
            android:textSize="18sp"
            android:textColor="#222222"
            android:textStyle="bold"
            android:gravity="center"
            android:padding="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp" />

        <!-- Contact Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            card_view:cardElevation="6dp"
            android:layout_marginTop="25dp"
            android:layout_marginBottom="20dp"
            android:padding="20dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_margin="20dp"
                android:layout_height="wrap_content">

                <!-- Address -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📍 Address"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingBottom="4dp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SafarMitra Tech Solutions Pvt. Ltd.\nMurtizapur, Maharashtra – 444107"
                    android:textSize="15sp"
                    android:paddingBottom="12dp" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <!-- Phone -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📞 Phone"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/phoneNumber1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+91 90213 07634"
                    android:textSize="15sp"
                    android:autoLink="phone" />

                <TextView
                    android:id="@+id/phoneNumber2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+91 90212 57305"
                    android:textSize="15sp"
                    android:paddingBottom="12dp"
                    android:autoLink="phone" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <!-- Email -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="📧 Email"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/emailAddress1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="support@safarmitra.in"
                    android:textSize="15sp"
                    android:autoLink="email" />

                <TextView
                    android:id="@+id/emailAddress2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="feedback@safarmitra.in"
                    android:textSize="15sp"
                    android:paddingBottom="12dp"
                    android:autoLink="email" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC" />

                <!-- Website -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🌐 Website"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:textColor="#000" />

                <TextView
                    android:id="@+id/websiteLink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="www.safarmitra.in"
                    android:textSize="15sp"
                    android:autoLink="web" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#CCCCCC"
                    android:layout_marginTop="12dp" />

                <!-- Support Hours -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🕒 Support Hours"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:paddingTop="12dp"
                    android:paddingBottom="4dp"
                    android:textColor="#000" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mon – Sat: 10 AM to 6 PM\nSunday: Closed"
                    android:textSize="15sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Social Media Section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Connect with us"
            android:textSize="18sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginTop="25dp"
            android:paddingBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_marginBottom="30dp">

            <ImageView
                android:id="@+id/instagram"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_instagram"
                android:layout_margin="10dp"
                android:contentDescription="Instagram" />

            <ImageView
                android:id="@+id/facebook"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_facebook"
                android:layout_margin="10dp"
                android:contentDescription="Facebook" />

            <ImageView
                android:id="@+id/twitter"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_twitter"
                android:layout_margin="10dp"
                android:contentDescription="Twitter" />

            <ImageView
                android:id="@+id/linkedin"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_linkedin"
                android:layout_margin="10dp"
                android:contentDescription="LinkedIn" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
