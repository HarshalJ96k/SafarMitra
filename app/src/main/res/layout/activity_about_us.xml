<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/about_scroll"
    android:background="#F4F6F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Card: Logo + App Title -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="8dp"
            android:backgroundTint="#FFFFFF"
            android:padding="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <ImageView
                    android:id="@+id/appLogo"
                    android:layout_width="300dp"
                    android:layout_height="250dp"
                    android:src="@drawable/new_logo"
                    android:contentDescription="App Logo"
                     />

                <TextView
                    android:id="@+id/appName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SafarMitra"
                    android:textColor="#1565C0"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Your Travel Buddy for Every Journey"
                    android:textColor="#607D8B"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"
                    android:layout_marginBottom="10dp"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Card: About Us Description -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFFFFF"
            android:padding="6dp">

            <TextView
                android:id="@+id/aboutDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="SafarMitra is an innovative travel solution platform that brings together car owners, drivers, and customers in one ecosystem. Whether you're looking to book a ride, earn by listing your vehicle, or offer driving services – SafarMitra makes it seamless, secure, and smart."
                android:textColor="#424242"
                android:textSize="16sp"
                android:lineSpacingExtra="6dp"
                android:layout_margin="15dp"/>
        </androidx.cardview.widget.CardView>

        <!-- Card: Key Features -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            card_view:cardCornerRadius="16dp"
            android:layout_marginBottom="16dp"
            android:elevation="6dp"
            android:backgroundTint="#FFFFFF"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="15dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Key Features"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="#1E88E5"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Car Booking\n• Car Owner Partnership\n• Driver Finder\n• Multi-Role Access (Customer, Owner, Driver)\n• Verified Profiles and Secure Access"
                    android:textSize="16sp"
                    android:textColor="#444" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Developer Credit -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Developed with ❤️ by Harshal Jadhav"
            android:textColor="#9E9E9E"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:paddingBottom="16dp" />
    </LinearLayout>
</ScrollView>
