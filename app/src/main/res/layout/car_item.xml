<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_marginTop="30dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:elevation="15dp"
        app:cardBackgroundColor="#FFEB3B"
        app:cardCornerRadius="8dp">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:src="@drawable/swiftcarimage"
            android:id="@+id/ivCarImage"
            />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:elevation="5dp"
        app:cardBackgroundColor="#FFEB3B"
        app:cardCornerRadius="10dp"
        android:layout_marginTop="30dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="Car Type: Sedan"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/tvCarType"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="No. of Seats: 4"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/tvSeats"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Rent per KM :- 10-15 rs/km"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold"
                android:id="@+id/tvRent"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Click Here For More Information"
                android:textColor="#2196F3"
                android:textSize="17dp"
                android:textStyle="bold"
                android:layout_marginTop="10dp"
                android:id="@+id/tvMoreInfo"
                />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>