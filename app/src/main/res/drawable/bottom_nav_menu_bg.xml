<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Selected color -->
            <corners android:radius="24dp"/> <!-- Rounded corners for the rectangle -->
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/> <!-- Unselected color -->
        </shape>
    </item>
</selector>
